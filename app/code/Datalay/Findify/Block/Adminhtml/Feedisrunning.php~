<?php
namespace Datalay\FindifyFeed\Block\Adminhtml;

//class Feedisrunning extends Mage_Adminhtml_Block_System_Config_Form_Field
class Feedisrunning extends \Magento\Config\Block\System\Config\Form\Field
{

    /**
     * @var \Datalay\FindifyFeed\Helper\Data
     */
    protected $findifyFeedHelper;

    public function __construct(
        \Datalay\FindifyFeed\Helper\Data $findifyFeedHelper
    ) {
        $this->findifyFeedHelper = $findifyFeedHelper;
    }
    protected function _getElementHtml(\Magento\Framework\Data\Form\Element\AbstractElement $element)
    {
        return (string) $this->findifyFeedHelper->getFeedIsRunning();
    }
}